<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PayFare">

    <TextView
        android:id="@+id/calculatedFare"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="85dp"
        android:text="Calculated Fare"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/payFare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/payFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="123dp"
        android:text="Pay Via Wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatedFare" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="89dp"
        android:text="Recommended to Pay Via Wallet for faster Transaction"
        android:textColor="#FF3C3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payFare" />

</androidx.constraintlayout.widget.ConstraintLayout>